<h1>Welcome, <%= @user.username %> </h1>
<a href="/logout">Logout</a>
<br/><br/>
<a href="/tweets/new">New Tweet!</a>
<h2> Tweets </h2>
<% if @user.tweets.empty? %>
  <p>You've made no tweets!</p>
<% else %>
<ul>
<% @user.tweets.each do | tweet | %>
  <li><%= tweet.content %><br/>
    <a href="/tweets/<%= tweet.id %>">View</a>
  </li>
<% end %>
</ul>
<% end %>

<br/><br/>
<h4>All Tweets</h4>
<% @tweets.each do | tweet |  %>
  <%= tweet.content  %><br/>
  by <%= tweet.user.username  %>
  <br/><br/>
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                  <span class="glyphicon glyphicon-edit"></span> Edit post</div>
                <div class="panel-body">
                    <form action="/posts/<%= @post.id %>" method="POST" class="form-horizontal" role="form">
                      <input id="hidden" type="hidden" name="_method" value="patch">
                      <div class="form-group">
                          <label for="title" class="col-sm-3 control-label">
                            Title</label>
                          <div class="col-sm-9">
                              <input type="text" name="post[title]" class="form-control" id="title" value="<%= @post.title%>">
                          </div>
                      </div>

                      <div class="form-group">
                        <label for="content" class="col-sm-3 control-label">
                            Content</label>
                          <div class="col-sm-9">
                              <input type="textarea" name="post[content]" id="content" class="form-control" value="<%= @post.content%>">
                          </div>
                      </div>

                      <div class="form-group last">
                          <div class="col-sm-offset-1 col-sm-1">
                              <button type="submit" class="btn btn-success btn-sm">
                                  Done</button>

                          </div>
                      </div>
                    </form>
                    <form action="/posts/<%= @post.id %>/delete" method="POST" class="form-horizontal" role="form">
                      <input id="hidden" type="hidden" name="_method" value="delete">
                    <div class="form-group last">
                        <div class="col-sm-offset-1 col-sm-1">
                            <button type="submit" class="btn btn-success btn-sm">
                                Delete</button>

                        </div>
                    </div>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>

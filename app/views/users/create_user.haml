%form(action="/signup" method="post")
  .form-group
    %label
      Username:
      %input#username(type="text" name="user[username]")

  .form-group
    %label
      Email:
      %input#email(type="email" name="user[email]")

  .form-group
    %label
      Password
      %input#password(type="password" name="user[password]")

  %input#submit.btn.btn-danger(type="submit" name="submit" value="Create User")

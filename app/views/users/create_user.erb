<form class="form" action="/signup" method="POST"> 
  
  <!--normal-->
  <input type="text" name="username" placeholder="username" pattern="[a-zA-Z0-9_-]{5,12}" autofocus required title="must be alphanumeric in 5-12 characters">
  <span class="icon-validation"></span> <br><br>
  
  <!--normal-->
  <input type="email" name="email" placeholder="email" pattern="^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$" autofocus required title="must be alphanumeric in 5-12 characters">
  <span class="icon-validation"></span> <br><br>
  
  <!--normal-->
  <input type="password" name="password" placeholder="password" pattern="[a-zA-Z0-9_-]{5,12}" autofocus required title="must be alphanumeric in 5-12 characters">
  <span class="icon-validation"></span> <br><br><br>
  
  <!--submit-->
  <input id="submit" type="submit" value="Sign Up">
</form>


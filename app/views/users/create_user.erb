<div>
  <h1>Signup</h1>
  <span><%= flash[:fields] %></span>
  <form method='post' action='/signup'>
    <input class='text' type='text' name='username' placeholder='Username' required><br>
    <input class='text' type='text' name='email' placeholder='Email' required><br>
    <input class='text' type='password' name='password' placeholder='Password' required><br>
    <br>
    <input class='submit' type='submit' value='submit' class='button'>
  </form>
</div>

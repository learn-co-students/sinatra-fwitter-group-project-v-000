<div class="container">
   <div class="page-canvas">
      <div class="signup-wrapper">
        <p><h1>Join Our Community</h1></p>
        <p><h2>Sign Up Here</h2></p>

            <div class="signup-box">
              <form role="textbox" action="/signup" method="POST">
                <div class="prompt">
                   <input type="text" name="username" id="username" class="form-control input-lg" placeholder="User Name">
                </div>
                
                 <div class="prompt">
                    <input type="text" name="email" id="email" class="form-control input-lg" placeholder="Email">
                 </div>
                 <div class="prompt">
                    <input type="text" name="password" id="password" class="form-control input-lg" placeholder="Password">
                 </div>
                 <div class="prompt">
                  <input type="submit" value="Register" class="btn btn-info btn-block">
                </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>

<% if current_user.id == @user.id %>
  <section class=" col-2 shadow">
    <h3>What's on your mind?</h3>
  <form method="POST" action="/tweets">
    <input type="text" name="content">
    <input type="submit" value="submit">
  </form>
  <% end %>

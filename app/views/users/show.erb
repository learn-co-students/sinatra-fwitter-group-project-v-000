<h2><%= @user.username %></h2>

<% @user.tweets.each do |tweet| %>
  <p><%= tweet.content %></p>
  <p><a href="/tweets/<%= tweet.id %>">View Page<a></p>
  <br></br>
<% end %>

<% if @user == User.current_user(session) %>
  <br></br>
  <a href="/tweets/new">Create New Tweet</a>
  <br></br>
  <a href="/tweets">Back to Index</a>
  <br></br>
  <a href="/logout">Log Out</a>
<% end %>

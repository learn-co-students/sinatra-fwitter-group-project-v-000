<% @title = "#{@this_user.username}'s Tweets" %>

<h2><%= @this_user.username%>'s Tweets</h2>
<p>
    <% if @this_user.id == @current_user.id %>
        <a href="/tweets/new">New Tweet</a> |
    <% end %>
    <a href="/tweets">Back to Timeline</a>
    <% if @this_user.id == @current_user.id %>
        | <a href="/logout">Log Out</a>
    <% end %>
</p>
<hr style="height:4px;border-width:0;color:#727474;background-color:#727474" />

<% @this_user.tweets.each do |tweet|%>
    <p><%= tweet.content %>
        (<a href="/tweets/<%= tweet.id %>">view</a>)
        <% if @this_user == @current_user %>
          (<a href="/tweets/<%= tweet.id %>/edit">edit</a>)
        <% end %>
    </p>
    <hr style="height:2px;width:300px;border-width:0;color:#C7CFCF;background-color:#C7CFCF;" />
<% end %>

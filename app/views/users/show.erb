<h1>Welcome, <%=current_user.username%></h1>
<a href="/tweets/new">Create New Tweet</a> <a href="/logout">Log Out</a>


<%current_user.tweets.each do |tweet| %>
  <br>
  
  <p><%=tweet.content%></p>
  <p><a href="/tweets/<%=tweet.id%>.edit">Edit Tweet</a> 
  <br>
  <form action = "/tweets/<%=@tweet.id%>/delete" method = "post">
    <input type = "submit" value ="Delete Tweet">
  </form>
  
  <br>
<%end%>

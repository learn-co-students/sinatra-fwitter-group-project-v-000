<h3>Log in to your Fwitter account</h3>
<p>(No account yet? <a href='/signup'>Sign up here</a>)</p>

<p><%= @login_error_message %></p>
<form action='/login' method="POST">
    <% fields = [["username", "text"], ["password", "password"]] %>
    <% fields.each do |field| %>
        <% field_name = field[0] %>
        <% field_type = field[1] %>
        <div>
            <label for="<%= field_name %>"><%= field_name.capitalize %>: </label>
            <input type="<%= field_type %>" id="<%= field_name %>" name="<%= field_name %>">
        </div>
    <% end %>

    <input type="submit" id="submit" value="Log In">
</form>
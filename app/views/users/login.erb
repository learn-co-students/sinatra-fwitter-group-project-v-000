<style>
  .flash {
    color: red;
    font-size: 20px;
  }
</style>

<div class="flash">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h2>Please Log In Here</h2>

<form action="/login" method="POST">

  <label for="username">Username: </label>
  <input id="username" type="text" name="username" placeholder="Username"></input><br></br>
  <label for="password">Password: </label>
  <input id="password" type="password" name="password" placeholder="Password"></input><br></br>

  <p><input type="submit" value="submit"></input></p>

</form><br></br>

<p><a href="/signup">Click here to create a new account</a></p>

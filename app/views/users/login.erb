<h1>Login</h1>

<form action="/login" method="post">
  <label for="username">User Name:</label><br>
  <input type="text" name="username" id="username" value="<%= @username if @username %>">
  <br><br>

  <label for="password">Password:</label><br>
  <input type="text" name="password" id="password" value="<%= @password if @password %>">
  <br><br>

  <input type="submit" name="submit" id="submit" value="Login">
</form>

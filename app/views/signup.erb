<h2>Join Fwitter today.</h2>
<% if flash.has?(:message) %>
  <p style="color:red;"> <%= flash[:message] %> </div>
<% end %>

  <br><br>
<br>

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <form method="POST" action="/signup" >
      <div class="form-group">
        <input type="text"  class="form-control" name="username" id="username" placeholder="Username">
      </div>

      <div class="form-group">
        <input type="text" class="form-control" name="email" id="email" placeholder="Email">
      </div>

      <div class="form-group">
        <input type="password" class="form-control" name="password" id="password" placeholder="password">
      </div>

      <input type="submit" class="btn btn-outline-info btn-primary btn-primary:hover" value="Sign Up">
    </form>
  </div>

  <br>
  <div class="row h-100 justify-content-center align-items-left">
    <a href="/">Home</a>
  </div>

</div>

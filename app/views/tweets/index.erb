<h1>Welcome, <%= @user.username %></h1>

<ul>
    <% @tweets.each do |tweet| %>
        <li><%= tweet.content %>
            <% if tweet.user_id == current_user.id %>
                <br>
                <a href="/tweets/<%=tweet.id%>/edit"><button>Edit</button></a>
                <form action="/tweets/<%=tweet.id%>/delete" method="POST">
<input id="hidden" type="hidden" name="_method" value="delete">
<input type="submit" value="Delete Tweet">
</form>
            <% end %>
        </li>
        
    <% end %>
</ul>
<br>
<a href="/tweets/new"><button>New Tweet</button></a>
<br><br><a href="/logout"><button>Log Out</button></a>
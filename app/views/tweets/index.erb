<% if flash.has?(:message) %>
  <h4><font color = 'red'><%= flash[:message] %></font></h4>
<% end %>

<h1><font color="maroon">Welcome, <%=@user.username%>!</font></h1>
<br>
<h4><font color="gray"><u>TweetFeed</u></font></h4>
<br>
<div>
<%Tweet.all.each.with_index(1) do |tweet,i|%>
  <p><font color="gray"><%="#{i}"%>. <%=tweet.content%> - <em><%=tweet.user.username%></em></font></p>
<%end%>
</div>
<br>
<br>
<div>
<a href='/tweets/new'>Create</a> | <a href="/users/<%=@user.slug%>">My Tweets</a> | <a href="/logout">Logout</a>
</div>

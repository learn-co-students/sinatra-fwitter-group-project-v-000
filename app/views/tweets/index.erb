
<h1>Fwitter</h1>

<% if logged_in? %>
  <p>Welcome, <%= current_user.username %></p>
  <a href="/logout">Log Out</a>

<h4><a href="/tweets/new">Make a new tweet</a></h4>
<ol>
<% @tweets.each do |tweet| %>
  <a href="/tweets/<%= tweet.id %>"><li><h2><%= tweet.content %></h2></li></a>
<% end %>
</ol>

<% end %>

<h1>Welcome, <%= @current_user.username %></h1>

<h2>Tweets!!</h2>

<ul>
  <% Tweet.all.each do |tweet| %>
    <label>Tweet <%= tweet.id %></label><br>
    <ul>
      <li>
        <%= tweet.content %>
      </li>
    </ul>

    <br></br>
  <% end %>
</ul>

<a href="/users/<%= @current_user.slug %>"><%= @current_user.username %> Tweets</a><br>
<a href="/tweets/new">Create New Tweet</a><br>
<a href="/logout">Log Out</a>

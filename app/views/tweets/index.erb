<h3>Welcome, <strong><%= user.username %></strong></h3>
<p><a href="/tweets/new">Post new tweet</a></p>
<p><a href="/users/<%= user.slug %>">View your tweets</a></p>

<% @tweets.each do |t| %>
    <div class="tweetContainer">
        <span><%= t.content %></span><br>
        <span>tweeted by: <%= t.user.username%></span>
    </div>
<% end %>

<p><a href='/logout'>Log out</a></p>
<h1> View Tweet </h1>

<h2>Tweet <%=@tweet.id%></h2>
   <%= @tweet.content%>

<form action="/tweets/<%= @tweet.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="content">Edit Tweet:</label>
  <input type="text" name="content" id="content" value="<%= @tweet.content %>"><br></br>
  <input type="submit" value="submit">
</form>

<form method="POST" action="/tweets/<%= @tweet.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Tweet">
</form>

<% if logged_in?%>
<%= @error %>
  <form action='/tweets' method="post">
    Content:
    <input type="text" name="content" required><br>
    Create Your Tweet:

    <input type="submit" value="Submit Tweet">

  </form>

  <% else %>
      <h1> You Must Be Logged in to Make Tweets </h1>
      <h2><a href="/login">Log In</a></h2>
  <% end %>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Edit Tweet</h2>
<form action="/tweets/<%=@tweet.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p><input type="text" name="content" value="<%=@tweet.content%>"></p>
  <input type="submit" name="submit" value="submit">

</form>

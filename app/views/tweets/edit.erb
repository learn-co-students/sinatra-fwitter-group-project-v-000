<% if flash[:error] %>
 <% flash[:error].each do |e| %>
   <p class="error message"><%= e + "." %></p>
  <% end %>
<% end %>

<h1>Edit tweet</h1>

<form action="/tweets/<%= @tweet.id %>" method="post">
  <input type="textarea" name="content" value="<%= @tweet.content %>">
  <input type="submit" value="submit">
</form>

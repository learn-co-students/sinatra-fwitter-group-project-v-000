<h1>Edit Tweet</h1>

<% if flash.has?(:message) %>
  <p>
    <%= flash[:message] %>
  </p>
<% end %>

<form method="POST" action="/tweets/<%= @tweet.id %>">
  <input type="text" name="content" id="content"  value="<%= @tweet.content %>"/>
  <input type="submit" id="submit" value="Update Tweet" />
</form>

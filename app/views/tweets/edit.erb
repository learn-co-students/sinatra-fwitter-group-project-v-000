<p class="flash"><% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %></p>

<form method="POST" action="/tweets/<%=@tweet.id%>">
  
  <input type="hidden" id="hidden" name="_method" value="patch">
  
  <h3>Write Your Tweet Here:</h3> 
  
  <textarea rows="6" cols="80" name="content"><%=@tweet.content%></textarea>
  
  <p><input type="submit" value="Update Tweet" name="submit" id="submit"></p>
</form>




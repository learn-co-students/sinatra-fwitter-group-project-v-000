<h1>Edit</h1>

<%if flash.has?(:tweet_error)%>
  <h3><%=flash[:tweet_error]%></h3>
<%end%>

<form action="/tweets/<%=@tweet.id%>/edit" method="post">
  <input type="hidden" name="_method" value="patch" id="hidden">
  <input type="text" name="content" id="content" value="<%=@tweet.content%>">
  <br></br>
  <input type="submit" value="submit">
</form>

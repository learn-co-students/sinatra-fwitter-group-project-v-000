<div class="jumbotron">
	<div class="wrapper">
	  <div class="content">
      <br></br>
      <h3><strong>Your new tweet!</strong></h3><br></br>
      <p><%=@tweet.content%></p>
      <div class="row">
        <div class="col-sm-6">
          <form action="/tweets/<%=@tweet.id%>/edit" method="get">
            <input type="submit" class="btn btn-default btn-sm" value="Edit">
          </form>
        </div>
        <div class="col-sm-6">
          <form action="/tweets/<%=@tweet.id%>/delete" method="post">
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-default btn-sm" value="Delete">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

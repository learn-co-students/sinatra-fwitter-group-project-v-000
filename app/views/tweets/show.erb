<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<%if Helpers.logged_in?(session)%>

<h1><a href="/users/<%=@tweet.user.slug%>"><%=@tweet.user.username%></a> said:</h1>
<h3>"<%=@tweet.content%>"</h3><br><br>

<h4>If you wrote this tweet, you can edit or delete here./<h4>
<form method="get" action="/tweets/<%=@tweet.id%>/edit">
<input type="submit" value="Edit Tweet">
</form>

<form method="post" action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Tweet">
</form>
<%end%>
<br><br>
<a href="/tweets">Back to Homepage</a>

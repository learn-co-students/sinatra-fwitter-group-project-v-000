<div class="row">
  <div class="col">
    <h1>FWITTER TWEETS</h1>
    <h2>Welcome, <%= current_user.username %></h2>
  </div>
</div>

<% @tweets.each do |tweet| %>
  <div class="row">
    <div class="col">
      <div class="card text-center">
        <div class="card-body">
          <p class="card-text"><%= tweet.content %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

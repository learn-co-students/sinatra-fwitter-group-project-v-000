<div>
  <span>
    <a href='/tweets'>
      <button class='menu active'>Home</button></a>
     <a href='/tweets/new'>
      <button class='menu'>Create Tweet</button></a>
    <a href='/logout'>
      <button class='menu'>Logout</button></a>
  </span>
    <br>
  <h1>Welcome<%=", " + @user.username if !!@user  %></h1>
    <table align='center'>
      <tr>
        <th colspan=2>
          <u>--Fweet Timeline--</u>
        </th>
      </tr>
        <% @tweets.each do |tweet| %>
          <tr>
            <td width='30%'>
              <a href='/users/<%= tweet.user.username %>'><%= tweet.user.username %></a>
              <br>
              <span><%= tweet.created_at.strftime("%c") %></span>
            </td>
            <td align='left' width='70%'>
              <a href='/tweets/<%= tweet.id %>'>#</a> <span><%= tweet.content %></span>
            </td>
          </tr>
        <% end %>
    </table>
</div>

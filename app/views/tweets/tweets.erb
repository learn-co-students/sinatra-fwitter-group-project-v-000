<div class="container">
<h2>Welcome, <%=@user.username%></h2>
<h1>All Tweets</h1>
 <ul id="tweets">
    <% @tweets.each.with_index(1) do |tweet, index| %>
        <li><a href="/tweets/<%= tweet.id %>"><%= index %>: <%= tweet.content %> (user: <%= tweet.user.username %>)</a></li>
    <% end %>
<br><br>
<a href="/tweets/new"><input type="submit" id="submit" value="Create New Tweet"></a>
<br></br>
<a href="/logout"><input type="submit" id="submit" value="Logout"></a>
</div>
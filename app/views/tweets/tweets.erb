<% if Helpers.logged_in?(session) %>
       <h1>Welcome, <%= Helpers.current_user(session).username %></h1>

<%Tweet.all.each do |tweet| %>
<h3><li><a href="/tweets/<%=tweet.id %>"><%= tweet.content%></a></li></h3>
    <% end %>

    <a href="/tweets/new">New Tweet</a><br>

    <a href="/users/<%= Helpers.current_user(session).slug%>">My Tweets </a><br>

    <a href="/logout">Log Out</a>

<%end%>

<h3>Welcome, <%=@user.username%></h3>
<h3>Here are all of the current tweets</h3>
<ol>
<%@tweets.all.each do |tweet|%>
  <div>
    <li><%= tweet.user.username %>: <%= tweet.content %></li>
  </div>
</ol>
<%end%>

<h4><a href="/tweets/new">Create a Tweet</a></h4>


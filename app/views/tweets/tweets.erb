<h2>Welcome, <%= @user.username %>!</h2>
<p><a href = "<%= "/users/#{@user.slug}" %>">Your tweets</a></p>
<p><a href = "/tweets/new">Create a new tweet</a></p>
<p><a href="/logout">Log out</a></p>

<% @tweets.each do |tweet| %>
  <br>
  <p><a href = "<%= "/users/#{tweet.user.slug}"%>">
  <%= tweet.user.username %></a> tweeted: </p>
  <p><a href = "<%= "/tweets/#{tweet.id}" %>"><%= tweet.content %></p>
<% end %>

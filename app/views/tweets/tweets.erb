<h2>Welcome, <%=@user.username%></h2>
<p><a class="button" href='/tweets/new'>Create Tweet</a>
  <a class="button" href='/users/<%= @user.slug %>'>My Tweets</a>
  <a class="button" href='/logout'>Logout</a>
</p>
<ul>
  <%Tweet.all.each do |tweet|%>
  <li><a href='users/<%=tweet.user.slug%>'><%=tweet.user.username%></a> says:<br>
    <a href='/tweets/<%= tweet.id %>'><%=tweet.content%></a></li>
    <br>
  <%end%>
</ul>


<div class="container">
<div class="row">
           <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
               <div class="post-preview">

                       <h2 class="post-title">
                            Welcome, <%= current_user.username %>
                       </h2>
                       <h3 class="post-subtitle">
                         <% @tweets.each do |tweet| %>
                           <div>
                             <%= tweet.content %>
                           </div>
                         <% end %>
                       </h3>
</div>
</div>
</div>

<h1>Welcome, <%= current_user.username %>!</h1>
<h2>Tweets by others:</h2>

<% User.all.each do |user| %>
	<h3> Tweets by <a href="/users/<%= user.slug %>"><%= user.username %></a>: </h3>
		<% user.tweets.each do |tweet| %>
			<h4><a href="/tweets/<%= tweet.id %>"><%= tweet.content %></a></h4>
		<% end %>
<% end %>
<br><br><br><br>
<h2>Your Tweets:</h2>
<% @user.tweets.each do |tweet| %>
	<p><%= tweet.content %></p>
	<p><% tweet.id %></p>
	<a href="/tweets/<%= tweet.id %>/edit">Edit this tweet?</a>
<% end %>
<br><br><br><br>
<h2>What would you like to do next?</h2>
<h3><a href="/tweets/new">Create a new Tweet</a></h3>
<h3><a href="/logout">Logout</a></h3>

%h1.display-4 Edit Tweet

%br

%form(action="/tweets/#{@tweet.id}/edit" method="post")
  %input#hidden(type="hidden" name="_method" value="patch")
  .form-row
    .col
      %input#content.form-control(type="text" name="content"){value: @tweet.content}
    .col
      %input#submit.btn.btn-danger(type="submit" name="submit" value="Edit Tweet")

<h1>Tweet:</h1>
<ul>
  <li><%= @tweet.content %></li>
  <li><%= @tweet.user.username %></li>
</ul>

<a href="/tweets/<%= @tweet.id %>/edit">Edit Tweet</a>

<form action="/tweets/<%= @tweet.id %>/delete" method="POST">
  <input type="hidden" id="hidden" name="_method" value="delete">

  <label for="submit">Delete Tweet:</label>
  <input type="submit" value="Delete Tweet" id="submit">
</form>

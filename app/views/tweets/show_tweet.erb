<h2>Tweeet!</h2>

<% if @delete == "delete" %>
<b>Unable to delete another users tweet</b>
<% elsif @edit == "edit" %>
<b>Unable to edit another users tweet</b>
<%end%>
	

<p><%=@tweet.content%></p>
<b><a href="/users/<%=@tweet.user.slug%>"><%=@tweet.user.username%></a></b>

<form action="/tweets/<%=@tweet.id%>/edit" method="get"> 
  <input type="submit" value="Edit Tweet">
</form>

<br>
<form action="/tweets/<%=@tweet.id%>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
 
  <input type="submit" value="Delete Tweet">
</form>

<br><br>
<form method="get" action='/logout'>
	
	<input type="submit" name="submit" value="Log Out">
</form>

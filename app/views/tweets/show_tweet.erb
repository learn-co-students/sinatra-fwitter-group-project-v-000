<h2><%= @tweet.content %></h2>

<a href="/tweets/<%= @tweet.id %>/edit">Edit Tweet</a>

<br><br>

<form action="/tweets/<%= @tweet.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input id="hidden" type="hidden" name="username" value="<%= @tweet.user.username %>">
  <input id="submit" type="submit" name="" value="Delete Tweet">
</form>


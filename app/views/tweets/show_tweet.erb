<%= @tweet.content %>
<form action="/tweets/<%= @tweet.id %>/edit">
  <input type="submit" value="Edit Tweet">
</form>
<form action="/tweets/<%= @tweet.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete" id="Delete Tweet">
</form>

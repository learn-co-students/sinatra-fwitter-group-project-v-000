
<h2><%= @tweet.content %></h2>

<h5>Post by <%= @user.username %>.</h5>

<form action=<%= "/tweets/#{@tweet.id}/delete" %> method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="submit" value="Delete Tweet">
</form>
<a href="/tweets/#{@tweet.id}/edit">Edit Tweet</a>

<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>
<h1>Show Tweet</h1>

<p><%= @tweet.content %></p>
<br><br>
<a href='/tweets/<%= @tweet.id %>/edit'>Edit Tweet</a>
<br><br>
<form action='/tweets/<%= @tweet.id %>/delete' method='POST'>
<input type='hidden' name='_method' value='delete'>
<input type='submit' value='Delete Tweet'>
</form>

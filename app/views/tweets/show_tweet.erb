<%= @tweet.content %>

<a href='/tweets/<%=@tweet.id%>/edit'>Edit This Tweet</a>
<p>Delete This Tweet</p>
<% if logged_in? %>
<form method="post" action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete">
</form>
<% end %>

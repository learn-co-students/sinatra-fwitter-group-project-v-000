<blockquote class="blockquote"><%= @tweet.content %></blockquote>
<form method="post" action="/tweets/<%= @tweet.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input class="btn btn-danger" type="submit" value="Delete Tweet">
</form>
<a class="btn btn-warning" role="button" href="/tweets/<%= @tweet.id %>/edit">Edit Tweet </a>

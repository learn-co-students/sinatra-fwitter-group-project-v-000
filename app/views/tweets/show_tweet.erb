<h1>Your New Tweet</h2>

<%= @tweet.content %>

<form action="/tweets/<%= @tweet.id %>/edit" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="submit" value="Edit Tweet" id="submit">
</form>

<form action="/tweets/<%= @tweet.id %>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Tweet" id="submit">
</form>

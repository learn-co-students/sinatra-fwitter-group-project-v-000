<div class="tweet">
  <%= @tweet.user.username %><br>
  <%= @tweet.content %><br>
  <% if @tweet.user.id == session[:id] %>
  <form action="/tweet/<%=@tweet.id%>/edit" method="get">
    <input type="submit" value="Edit Tweet">
  </form>

    <form action="/tweet/<%=@tweet.id%>/delete" method="post">
      <input id="hidden" type="hidden" name="_method" value="delete">
      <input type="text" name="user_id">
      <input type="text" name="content">
      <input type="submit" value="Delete Tweet">
    </form>
  <% end %>
</div>

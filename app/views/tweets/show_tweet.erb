
<%if flash.has?(:notice)%>
  <%=flash[:notice]%>
<% end %>




<div class="card">
<div class="card-header">
  Tweet
</div>
<div class="card-body">
  <h6 class="card-title"><%=@tweet.content%></h6>
  <br>
  <div class="btn-group mr-2">
    <a href="/tweets/<%=@tweet.id%>/edit" class="btn btn-sm btn-primary">Edit Tweet</a>
  </div>
  <div class="btn-group">
    <form class="" action="/tweets/<%=@tweet.id%>/delete" method="post">
      <input type="hidden" id="hidden" name="_method" value="delete">
      <input type="submit" class="btn btn-sm btn-primary" value="Delete Tweet">
    </form>

  </div>


</div>
</div>



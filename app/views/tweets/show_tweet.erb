<h1>Tweet: <%= @tweet.id %></h1>
<br><br>
<%= @tweet.content %>
<br><br>

<% if flash.has?(:notice) %>
<p class="flash"><%= flash[:notice] %></p>
<% end %>

<a href="/tweets/<%=@tweet.id%>/edit">Edit Tweet</a>
<br><br>
<a href="/tweets">All Tweets</a>
<br><br>
<form action="/tweets/<%=@tweet.id%>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="delete" value="Delete Tweet">
</form>
<br><br>
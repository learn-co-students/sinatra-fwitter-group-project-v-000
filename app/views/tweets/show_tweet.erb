<h2>Show Tweet</h2>
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<p><%= @tweet.content %></p>

<form action="/tweets/<%= @tweet.id %>/delete" method="post">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Tweet">
</form>

<a href="/tweets/<%= @tweet.id %>/edit">Edit Tweet</a>

<h1>Edit Tweet</h1>

<div class="row">
  <div class="col">
    <form class="" action="/tweets/<%= @tweet.id %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <div class="form-group">
        <label for="content">Content</label>
        <input type="text" class="form-control" id="content" name="tweet[content]" value="<%= @tweet.content %>">
      </div>

      <button type="submit" id="submit" name="submit" class="btn btn-primary">Tweet</button>
    </form>
  </div>
</div>

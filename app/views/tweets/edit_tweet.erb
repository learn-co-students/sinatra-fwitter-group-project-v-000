<h2>Edit tweet</h2>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<form action="/tweets/<%=@tweet.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="content" value="<%=@tweet.content%>">
  <input type="submit" value="submit">
</form>

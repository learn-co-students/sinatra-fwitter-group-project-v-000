<form action="/tweets/<%=@tweet.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch" 
    <div class="container tweet mx-auto">
        <div class="row align-items-center">
            <div class="col-sm-3 image-container">
                <figure>
                    <img src="../images/no-photo.png" alt="generic head silhouette" class="img-fluid">
                </figure>
            </div>

            <div class="col-sm-6 tweet-container">
                <h5></h5>
                <h6><textarea id="content" name="tweet[content]" placeholder="<%=@tweet.content%>"></textarea></h6>
                
            </div>
            <div class="col-sm-auto">
                <input type="submit" id="submit" value="Save Changes">
            </div>
        </div>
    </div>    
</form>

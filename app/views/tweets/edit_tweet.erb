<h1>Edit Tweet</h1>
<%=@tweet.content%>

<form action="/tweets/<%=@tweet.id%>/delete" method="POST">
  <input type="hidden" name="_method" value="delete">
  <label>Delete Tweet</label><br>
  <input type="submit" name="submit" value="submit">

</form>

<form  action="/tweets/<%=@tweet.id%>/edit" method="POST">
  <input type="hidden" name="_method" value="patch">
  <label>Edit Tweet</label>
  <input type="text" name="content" value="<%=@tweet.content%>">
  <input type="submit">
</form>

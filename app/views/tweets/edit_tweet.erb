<h1> Edit Tweet! </h1>

<form action="/tweets/<%=@tweet.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="content">Content: </label><input type="text" name="content" id="content" value="<%=@tweet.content%>">
  <input type="submit" value="submit">
</form>


<form method="POST" action="/tweets/<%=@tweet.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <label for="delete">Delete Tweet: </label><input type="submit" value="Delete Tweet">
</form>

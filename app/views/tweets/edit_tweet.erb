<% if flash.has?(:notice) %>
  <div class="alert alert-danger" role="alert"> <%= flash[:notice] %> </div>
<% end %>
<br>

<h1> Edit tweet </h1>
<br>

<form action="/tweets/<%= @tweet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <div class="form-group">
    <label> Content: </label>
    <textarea class="form-control" rows="3" name="content"> <%= @tweet.content %> </textarea>
  </div>
  <br>

  <input type="submit" class="btn btn-info btn-lg" id="submit" value="Edit Tweet">
</form>
<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Edit the Tweet!</h1>
<form action="/tweets/<%=@tweet.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH">

  <input type="text" name="content" value="<%= @tweet.content %>" placeholder="<%= @tweet.content %>">
  <input type="submit" value="submit">
</form>

<a href="/tweets">Head Back Home</a>

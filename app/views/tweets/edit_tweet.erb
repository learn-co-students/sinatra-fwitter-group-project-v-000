<h2>Edit Tweet</h2>
<hr>
<form method="POST" action="/tweets/<%= @tweet.id %>">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label for="content">Tweet Content: </label>
  <input type="text" id="content" name="content" value="<%= @tweet.content %>" size="144">
  <br><br>
  <input type="submit" value="submit">
</form>
<form method="post" action="/tweets/<%= @tweet.id %>">
  <input type="hidden" id="hidden" name="_method" value="delete">
  <input type="submit" value="Delete Tweet">
</form>
<hr>
<em>You are currently logged in as <%= current_user.username %></em>
<br><br>
<form action="/logout">
    <input type="submit" value="Logout" />
</form>
<style>
  textarea {
    width: 300px;
    height: 100px;
  }

  .flash {
    color: red;
    font-size: 20px;
  }
</style>

<div class="flash">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<h2>You Can Edit Your Tweet Here</h2>

<form action="/tweets/<%= @tweet.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch"></input>
  <label for="content">Please edit the content of your tweet: </label><br></br>
  <textarea id="content" name="content"><%= @tweet.content %></textarea>

  <p><input type="submit" value="submit"></p>

</form>

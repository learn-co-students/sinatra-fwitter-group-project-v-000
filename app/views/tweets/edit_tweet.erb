
<form action="/tweets/<%= @tweet.id %>/edit" method="post">
  
  <div class="form-group">
    <label for="username" class="col-sm-2 control-label">Tweet</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" name="tweet" id="content" value="<%= @tweet.content %>" required>
    </div>
  </div>


  <input type="submit" value="submit">

</form>


<div class="col-sm-6 col-sm-offset-3 fwitter-form">
  <div class="col-sm-12 fwitter-form-message">
    <h1>Compose your tweet</h1>
  </div>
  <% if flash[:message] %>
    <% flash[:message].each do |message| %>
      <div class="form-group has-error">
        <div class="col-sm-8 col-sm-offset-2">
          <p class="control-label"><%= message %></p>
        </div>
      </div>
    <% end %>
  <% end %>
  <form class="form-horizontal" action="/tweets" method="post">
    <div class="form-group">
      <!-- <label for="inputUsername3" class="col-sm-2 control-label">Username</label> -->
      <div class="col-sm-8 col-sm-offset-2">
        <textarea type="text" name="content" class="form-control" id="fwitter-tweet-content" placeholder="tweet away"></textarea>
      </div>
    </div>
    <div class="form-group fwitter-form-button">
      <div class="col-sm-8 col-sm-offset-2">
        <button type="submit" class="btn btn-primary btn-block">Tweet</button>
      </div>
    </div>
  </form>
</div>

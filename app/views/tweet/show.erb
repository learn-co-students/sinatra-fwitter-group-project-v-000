<div class="col-md-6 col-md-offset-3 main-content">
  <%= @tweet.content %>
    <form method="post" action="/tweets/<%=@tweet.id%>/delete">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <input class="btn btn-md btn-primary" type="submit" value="Delete Tweet">
    </form>
    <br>
    <a class="btn btn-md btn-primary" href="/tweets/<%=@tweet.id%>/edit">Edit Tweet </a>
</div>

<h2>Welcome, <%= current_user.username %></h2>

<% @tweets.each do |tweet| %>
    <div onclick="location.href='/tweets/<%= tweet.id %>'" style="border: solid lightblue 1px;">
        <h3><a href="/users/<%= tweet.user.slug %>"><%= tweet.user.username %></a></h3>
        <p><%= tweet.content %></p>
    </div>
<% end %>
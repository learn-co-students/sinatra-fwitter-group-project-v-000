<h2>Add a tweet</h2>

<form method="post" action="/tweets">
  <div class="form-group row">
    <label for="example-text-input" class="col-xs-2 col-form-label">Status: </label></label>
    <div class="col-xs-10">
      <input class="form-control" name="content" id="example-text-input">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-xs-offset-4 col-xs-4">
      <button type="submit" name="submit" id="submit" class="btn btn-primary btn-sm btn-block">Submit</button>
    </div>
  </div>
</form>

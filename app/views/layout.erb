<!doctype html>
<html>
  <head>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <title>Fwitter</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href="/">Fwitter</a>
      <% if logged_in? %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <p>Welcome <%= current_user.username %></p>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/tweets/new">Create Tweet</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/logout">Log out</a>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/singup">Sign Up</a>
          </li>
          <li class="nav-item pull-right">
            <a class="nav-link" href="/login">Sign In</a>
          </li>
        </ul>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>

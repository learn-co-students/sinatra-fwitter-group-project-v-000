<!doctype html>
<html>
  <head>
    <title>Fwitter</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <nav>
      <% if logged_in? %>
        <p>Welcome, <%=current_user.username %></p>
        <button type="button" name="button"><a href="/tweets/new"> Create Tweet </a></button>
        <button type="button" name="button"><a href="/logout"> Log Out </a></button>
        <button type="button" name="button"><a href="/tweets">Tweets</a></button>



      <% else %>
        <h3><a href="/signup">Sign Up</a></h3>
        <h3><a href="/login"> Sign In </a></h3>
      <%end %>

    </nav>
    <div class="container">
      <h1>Fwitter</h1>
      <%= yield %>


    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  </body>
</html>
